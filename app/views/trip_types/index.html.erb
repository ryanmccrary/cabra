<%= link_to "Create New Type", new_trip_type_path %>&nbsp;<span class="glyphicon glyphicon-new-window"></span>

<h4>Available Trip Types</h4>
<% if @trip_types.empty? %>

  <h1>No trip types available, please create one.</h1>

<% else %>

  <table class="table table-striped table-hover">
    <% @trip_types.each do |type| %>
      <tr>
       <td><%= type.name %></td>
       <td><%= link_to "Edit", edit_trip_type_path(type) %></td>
      </tr>
    <% end %>
  </table>

<% end %>
<%= link_to "Select a group to create a new trip", groups_path %>&nbsp;<span class="glyphicon glyphicon-new-window"></span>

<br /><br />

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <td><b>Trip Date</b></td>
      <td><b>Group Name</b></td>
      <td><b>Trip Location</b></td>
      <td><b></b></td>
      <td><b></b></td>
    </tr>
  </thead>  
  <% @trips.each do |trip| %>
    <tr>
      <td><%= trip.date.strftime("%b %d, %Y") %></td>
      <td><%= trip.group.name %></td>
      <td><%= trip.location.name %></td>
      <td><%= link_to "View", trip_path(trip) %></td>
      <td><%= link_to "Edit", edit_trip_path(trip) %></td>
    </tr>
  <% end %>

</table>
<h3>Add trips to plan for <%= @plan.group.name %></h3>

<% if @possible.empty? %>

  <h3>There are no upcoming trips scheduled for <%= @plan.group.name %>. Please <%= link_to "create a new trip", trips_path %> to add to this plan.</h3>

<% else %>

  <%= form_tag(add_trips_plan_path(@plan)) do %>
    <% @possible.each do |trip| %>
        <div class="input-group">
          <%= check_box_tag 'trips[]', trip.id %>
          <%= label_tag("#{trip.activity.name} on #{trip.date.strftime("%b %d, %Y")}") %>
        </div>
    <% end %>

    <%= submit_tag("Submit") %>
  <% end %>

<% end %>